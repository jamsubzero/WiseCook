<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/infoIcon"
        android:layout_toRightOf="@+id/infoIcon"
        android:layout_toEndOf="@+id/infoIcon"
        android:weightSum="8"
        android:id="@+id/linearLayout3"
        android:background="@color/hint_foreground_material_light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Quisine:"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:foreground="@color/hint_foreground_material_light"
            android:paddingLeft="5dp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:background="@color/hint_foreground_material_light"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/paramCuisine"

            android:paddingLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="@color/gold"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textSize="15dp"
            android:textColorHint="@color/common_signin_btn_default_background"
            android:hint="(Any Cuisine)"
            android:text="Filipino"
            android:clickable="true"
            android:paddingBottom="3dp"
            android:paddingTop="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Meal:"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:foreground="@color/hint_foreground_material_light"
            android:paddingLeft="5dp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:background="@color/hint_foreground_material_light"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Dinner"
            android:id="@+id/paramMeal"

            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:hint="(Any Meal)"
            android:textColor="@color/gold"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColorHint="@color/common_signin_btn_default_background"
            android:clickable="true"
            android:paddingBottom="3dp"
            android:paddingTop="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Course:"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:foreground="@color/hint_foreground_material_light"
            android:paddingLeft="5dp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:background="@color/hint_foreground_material_light"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Appetizer"
            android:id="@+id/paramCourse"

            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:textColor="@color/gold"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:hint="(Any Course)"
            android:textColorHint="@color/common_signin_btn_default_background"
            android:clickable="true"
            android:paddingBottom="3dp"
            android:paddingTop="3dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Others:"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:foreground="@color/hint_foreground_material_light"
            android:paddingLeft="5dp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:background="@color/hint_foreground_material_light"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Birthday, Pressurecooker, 30mins, 50cal, 3 servings"
            android:id="@+id/paramOther"

            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:textColor="@color/gold"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:hint="(None)"
            android:textColorHint="@color/common_signin_btn_default_background"
            android:maxLines="2"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:clickable="true" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ingredients"
        android:id="@+id/ingLabel"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/accent_material_light"
        android:clickable="true" />



    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/ingAddedList"
        android:layout_below="@+id/ingLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/empty"
        android:text="No ingredient added"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:gravity="center"
        android:layout_below="@+id/ingLabel"
        android:layout_alignBottom="@+id/ingAddedList" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/closeBtn"
        android:layout_below="@+id/empty"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>